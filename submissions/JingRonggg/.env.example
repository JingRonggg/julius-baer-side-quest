# Money Transfer API Configuration
# Copy this file to .env and update with your values

# API endpoint URL (default: http://localhost:8123)
TRANSFER_API_URL=http://localhost:8123

# Request timeout in seconds (default: 30)
TRANSFER_TIMEOUT=30

# Maximum number of retry attempts for failed requests (default: 3)
TRANSFER_MAX_RETRIES=3

# Backoff factor for exponential backoff between retries (default: 0.3)
# Wait time = {backoff factor} * (2 ** ({retry number} - 1))
TRANSFER_BACKOFF_FACTOR=0.3
